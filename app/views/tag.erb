<div class="container">
  <div class="hero-unit">
    <h1>Tagged "<%=@tag.text %>"</h1>
  </div>
  
  <div class="row-fluid">
    <%@tag.posts.each do |p| %>
      <div class="span4"> 
        <h2 class="form-signin-heading">
          <a href="/#{title}"><%=p.title %></a>
        </h2>
        <p><%=p.body %></p>
      </div>
    <% end %>
  </div>
  <%=erb :_tags, :layout => false %>        
</div>

